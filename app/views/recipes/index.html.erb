<h1>Listing recipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ingredients</th>
      <th>Preperation time</th>
      <th>Instructions</th>
      <th>Author</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.preperation_time %></td>
        <td class="inst"><%= recipe.instructions %></td>
        <td><%= recipe.author %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= recipe.picture %></td>
      </tr>
    <% end %>
    <style type="text/css">
      td{
        border: 2px solid black;
        text-align: center;
      }
    </style>
  </tbody>
</table>

<br>

<div class='button'>
<%= link_to 'New Recipe', new_recipe_path %>
</div>